@using EntityLayer.DTOs.TravelDTOs
@model List<GetTravelDto>

@{
    ViewData["Title"] = "UsersTravels";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var userId = ViewBag.userId;
}

<a asp-controller="Travel" asp-action="Travels" asp-route-userId=@userId></a>
<div class="container">
    <div class="row">
        <div class="col-md-12">

            <table id="travelTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Travel ID</th>
                        <th>City</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Description</th>
                        <th>Stay</th>
                        <th>Vehicle</th>
                        <th>Create Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            @*if(item==null)
                    {
                    continue;
                    }*@
                            <tr>
                                <td>@item.TravelID</td>
                                <td>@item.City</td>
                                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.Description</td>
                                <td>@item.Stay</td>
                                <td>@item.Vehicle</td>
                                <td>@item.CreateDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Travel Found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
