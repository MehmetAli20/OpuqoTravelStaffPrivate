@using EntityLayer.DTOs.StaffDTOs
@model LoginDto

<form asp-controller="Auth" asp-action="Login" id="loginForm">
	<div class="form-group">
		<label asp-for="UserName">Kullanıcı Adı</label>
		<input asp-for="UserName" type="text" class="form-control" required />
	</div>
	<div class="form-group">
		<label asp-for="Password" type="password">Şifre</label>
		<input asp-for="Password" type="password" class="form-control" />
	</div>
	<button>Giriş yap</button>
</form>